{
    "name": "heptacom/shopware-heptacom-cli-tools",
    "license": "MIT",
    "description": "Development utility to support shopware 5 plugin development",
    "type": "shopware-plugin",
    "keywords": [
        "ecommerce",
        "shopware",
        "development"
    ],
    "authors": [
        {
            "name": "HEPTACOM GmbH",
            "role": "Manufacturer"
        },
        {
            "name": "Julian Krzefski",
            "role": "Developer"
        },
        {
            "name": "Joshua Behrens",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">= 7.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "kubawerlos/php-cs-fixer-custom-fixers": "^1.17"
    },
    "extra": {
        "installer-name": "HeptacomCliTools"
    },
    "scripts": {
        "php-lint": [
            "php-cs-fixer fix --allow-risky=yes --dry-run"
        ],
        "php-lint-fix": [
            "php-cs-fixer fix --allow-risky=yes"
        ]
    }
}
